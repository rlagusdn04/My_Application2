<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_h"
    android:paddingTop="?attr/actionBarSize"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/IdIVLogo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:src="@drawable/scanner"></ImageView>

    <TextView
        android:id="@+id/IdIVHead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/IdIVLogo"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="made by sis"
        android:textAlignment="center"
        android:textColor="@color/yellow_h"
        android:textSize="18sp"
        android:textStyle="italic"></TextView>

    <Button
        android:id="@+id/idBtnCapture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/IdIVHead"
        android:layout_marginStart="20dp"
        android:layout_marginTop="51dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/button_back"
        android:text="capture"
        android:textAllCaps="false"

        app:backgroundTint="@color/yellow_h" />


</RelativeLayout>